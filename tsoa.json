{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/useCases/**/*.controller.ts"],
  "spec": {
    "outputDirectory": "src",
    "specVersion": 3,
    "schemes": ["http", "https"],
    "host": "localhost:3001",
    "basePath": "/api/v1",
    "securityDefinitions": {
      "api_key": {
        "type": "jwt",
        "name": "authorization",
        "in": "headers"
      }
    }
  },
  "swagger": {
    "outputDirectory": "."
  },
  "routes": {
    "basePath": "/api/v1",
    "entryFile": "src/index.ts",
    "routesDir": "src",
    "iocModule": "src/iocConfig.ts",
    "custome-module": ["src/database/entities/*.Entity.ts"]
  },
  "ignore": ["**/node_modules/**"]
}

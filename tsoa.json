{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/useCases/**/*.controller.ts"],
  "spec": {
    "outputDirectory": "src",
    "specVersion": 3,
    "schemes": ["http", "https"],
    "host": "localhost:3001",
    "basePath": "/api/v1",
    "securityDefinitions": {
      "bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "swagger": {
    "outputDirectory": "."
  },
  "routes": {
    "basePath": "/api/v1",
    "entryFile": "src/index.ts",
    "routesDir": "src",
    "iocModule": "src/iocConfig.ts",
    "custome-module": ["src/database/entities/*.Entity.ts"],
    "authenticationModule": "src/middlewares/expressAuthentication.ts"
  },
  "ignore": ["**/node_modules/**"]
}

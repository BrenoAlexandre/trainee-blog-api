{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*.controller.ts"],
  "spec": {
    "outputDirectory": "dist",
    "specVersion": 3,
    "securityDefinitions": {
      "api_key": {
        "type": "jwt",
        "name": "authorization",
        "in": "headers"
      }
    }
  },
  "swagger": {
    "outputDirectory": "."
  },
  "routes": {
    "basePath": "/",
    "entryFile": "src/index.ts",
    "routesDir": "src/routes",
    "iocModule": "src/tsyringeTsoaIocContainer.ts",
    "controllerPathGlobs": ["src/useCases/**/*.controller.ts"],
    "custome-module": ["src/database/entities/*.Entity.ts"]
  }
}
